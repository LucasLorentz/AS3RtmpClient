<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:local="*"
			   creationComplete="application1_creationCompleteHandler(event)">
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import rtmpClient.RtmpStreamPlayer;
			
			private static const sourceConfig:String = "rtmp://rtmp01.hddn.com/play playpath=mp4:vod/demo.flowplayervod/buffalo_soldiers.mp4";
			
			private var _rtmpNetStream:RtmpStreamPlayer;
			
			protected function application1_creationCompleteHandler(event:FlexEvent):void
			{
				var video:Video = new Video();
				video.smoothing = true;
				videoContainer.video = video;
				
				_rtmpNetStream = new RtmpStreamPlayer();				
				_rtmpNetStream.play(sourceConfig, videoContainer.video);
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10" />
	</s:layout>
	
	<local:VideoContainer id="videoContainer"
						  width="100%" height="100%"/>
</s:Application>
